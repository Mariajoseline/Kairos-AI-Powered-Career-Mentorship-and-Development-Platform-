# ========================
# Frontend Configuration
# ========================
REACT_APP_API_URL=http://localhost:5000

# ========================
# Database Configuration
# ========================
DB_HOST=localhost
DB_USER=root                  # Replace with your MySQL username
DB_PASSWORD=your_db_password  # Replace with your MySQL password
DB_NAME=kairos_career         # Your database name
DB_PORT=3306                  # Default MySQL port
DB_DIALECT=mysql              # For Sequelize

# ========================
# Authentication
# ========================
JWT_SECRET=your_secure_jwt_secret_here  # Min 32 chars, e.g.: 'dK#8xL2$9pQ!5vR7yU4wZ*6tA9sD5gH8j'
JWT_EXPIRES_IN=1h                       # Token expiration (1h, 7d, etc.)

# ========================
# Server Configuration
# ========================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000